# =============================================
# Environment variables for the invoicing app
# Copy this file to .env and fill in the values
# =============================================

# Server
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/invoicing
SPRING_DATASOURCE_USERNAME=invoicing
SPRING_DATASOURCE_PASSWORD=invoicing

# Mail (for production use your SMTP provider; for local dev MailHog needs no auth)
SPRING_MAIL_HOST=localhost
SPRING_MAIL_PORT=1025
SPRING_MAIL_USERNAME=
SPRING_MAIL_PASSWORD=

